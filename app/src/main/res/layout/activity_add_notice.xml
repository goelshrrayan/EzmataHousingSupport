<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="6dp"
    tools:context="ezmata.housing.project.visito.SuperAdmin.NoticeWork.AddNotice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/background_text">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:hint="TITLE"
        android:textSize="@dimen/value_18sp"
        android:id="@+id/NoticeTitle"
        android:background="@android:color/transparent"
        />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9C9797" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_40dp"
        android:layout_margin="@dimen/value_10dp"
        android:text="DATE"
        android:id="@+id/Notice_Date"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textSize="@dimen/value_20dp"
        android:textStyle="bold"
        android:textColor="#000000"/>


    <EditText
        android:id="@+id/NoticeContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="5"
        android:gravity="left"
        android:hint="Content Of Notice"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/value_18sp"
        android:textColor="#FAFAFA"
        android:id="@+id/AddNoticeBtn"
        android:background="@drawable/button_round_black"
        android:text="Add Notice"/>

</LinearLayout>
</LinearLayout>